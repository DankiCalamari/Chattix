# Production Environment Variables
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secure-secret-key-here-change-this

# Database Configuration (Choose one)
# For PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/chattrix_prod
# For Heroku Postgres
# POSTGRES_URL=postgres://username:password@hostname:5432/database

# VAPID Keys for Push Notifications (Generate new ones for production)
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_SUBJECT=mailto:your-email@domain.com

# Admin User (Optional - creates default admin on startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security (Production)
FORCE_HTTPS=true

# External Services (Optional)
# EMAIL_SERVER=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
